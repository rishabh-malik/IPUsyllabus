<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCEDC8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ramit.ipusyllabus.BranchBtechActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:padding="16dp"
        android:text="Select Your Branch"
        android:textColor="#795548"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:orientation="vertical">

        <Button
            android:id="@+id/cse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:text="Computer Science Engineering"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000" />

        <Button
            android:id="@+id/ece"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:text="Electronics And Communication Engineering"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000" />

        <Button
            android:id="@+id/it"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:text="Information Technology"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000" />

        <Button
            android:id="@+id/eleceeng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:text="Electrical and Electronics Engineering"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>
